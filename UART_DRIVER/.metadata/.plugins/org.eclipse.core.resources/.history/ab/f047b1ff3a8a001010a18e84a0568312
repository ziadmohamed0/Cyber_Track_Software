#include "../../Drivers/custom_driver/hal/hal_defs.h"

int main (int argc, char* argv[]) {
	gpio led(GPIO_PORT::A, 1, GPIO_STATUS::OUTPUT_50MHz, GPIO_CONFIG::GP_PUSH_PULL);
	gpio btn(GPIO_PORT::A, 0, GPIO_STATUS::INPUT, GPIO_CONFIG::PULL_UP_DOWN);

	while(true) {
		bool btn_val = btn.get();
		if(btn_val == true) {
			led.set();
		}
		else {
			led.clear();
		}
	}
	return 0;
}
